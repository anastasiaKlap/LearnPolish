@model IEnumerable<LearnPolish.Models.Question>

@{
    ViewBag.Title = "Index";
}

<h2>Пытанне</h2>

<p>
    @Html.ActionLink("Стварыць", "Create", new { area = "" }, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <td>
            Назва тэсту
        </td>
        <td>
            Пытанне
        </td>
        <td>
            Адказ 1
        </td>
        <td>
            Адказ 2
        </td>
        <td>
            Адказ 3
        </td>
        <td>
            Адказ 4
        </td>
        <th>
            Добры адказ
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Exam.ExamTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuestionTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ans1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ans2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ans3)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ans4)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CorrectAns)
        </td> 
        <td>
            @Html.ActionLink("Рэдагаваць", "Edit", new { id = item.ID }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Выдаліць", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
            @Html.ActionLink("Падрабязнасці", "Details", new { id = item.ID }, new { @class = "btn btn-info" })
        </td>
    </tr>
}

</table>
