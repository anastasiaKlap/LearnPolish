@model IEnumerable<LearnPolish.Models.Lesson>
@{
    ViewBag.Title = "LessonsForYou";
}

 
<h2>Пазем @Session["level"]</h2> 
    <div class="row" mt-5 md-2>
        @foreach (var item in Model)
        {
            <div class="col-lg-4">
                <h4>
                    @Html.DisplayFor(modelItem => item.LessonName)
                </h4>
                <img src="~/LessonImg/@item.Photo" alt="" height="100px" width="100px">
                @*@if (item.Module.ModulLevel != Profile.)
                    {*@
                <p>
                    @Html.ActionLink("Гра", "Game", "Lessons", new { id = item.ID }, new { @class = "btn btn-success btn-sm" })
                    @Html.ActionLink("Усе словы", "Cards", "Lessons", new { id = item.ID }, new { @class = "btn btn-info btn-sm" })
                </p>
            </div>
        }

    </div>
    <br />
    <hr />
    @if (Session["nextLevel"] != null)
    {
        <p>@Html.ActionLink("Новы пазем", "NewLevel", "Lessons", null, new { @class = "btn btn-success btn-sm" })</p> }
    else
    {
        <p>Каб перайсці на новы ўзровень, ты павінен сумарна зарабіць 75% балаў з кожнай, з гер</p>
        <p>@Html.ActionLink("Новы пазем", "NewLevel", "Lessons", null, new { @class = "btn btn-success btn-sm, disabled" })</p>
    }
