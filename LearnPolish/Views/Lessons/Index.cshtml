@model IEnumerable<LearnPolish.Models.Lesson>

@{
    ViewBag.Title = "Index";
}

<h2>Заняткі</h2>

<p>
    @Html.ActionLink("Стварыць", "Create", new { area = "" }, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            Пазем
        </th>
        <th>
            Назва
        </th>
        <th>
            Фота
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Module.ModulLevel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LessonName)
        </td>
        <td>
            <img src="~/LessonImg/@item.Photo" alt="" height="100px" width="100px">
        </td>
        <td>
            @Html.ActionLink("Рэдагаваць", "Edit", new { id = item.ID }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Выдаліць", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
            @Html.ActionLink("Падрабязнасці", "Details", new { id = item.ID }, new { @class = "btn btn-info" })
        </td>
    </tr>
}

</table>
