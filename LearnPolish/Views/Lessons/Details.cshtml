@model LearnPolish.Models.Lesson

@{
    ViewBag.Title = "Details";
}

<h2>Падрабязнасці</h2>

<div>
    <h4>Заняткі</h4>
    <hr />
    <dl class="dl-horizontal">


        <dt>
            Пазем
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Module.ModulLevel)
        </dd>

        <dt>
            Назва
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LessonName)
        </dd>

        <dd>
            <img src="~/LessonImg/@Model.Photo" alt="" height="200px" width="200px">
        </dd>

    </dl>
</div>
<h5>Словы</h5>
<div>
    @using (Html.BeginForm("Create", "Images"))
    {


        @Html.Hidden("LessonID", Model.ID);


    }
    <br />
    @Html.ActionLink("Дадай слова", "Create", "Images", new { area = "" }, new { @class = "btn btn-success btn-sm" })

</div>
@foreach (var item in Model.Images)
{
    <div class="col-lg-4">
        <img src="~/Images/@item.Card" alt="" height="100px" width="100px">
    </div>
    <br />
    <br />
    <br />
    <br />
    <br />
    <div>
        <div>
            @Html.ActionLink("Рэдагаваць", "Edit", "Images", new { id = item.ID }, new { @class = "btn btn-primary btn-sm" })
            @Html.ActionLink("Выдаліць", "Delete", "Images", new { id = item.ID }, new { @class = "btn btn-danger btn-sm" })
            @Html.ActionLink("Падрабязнасці", "Details", "Images", new { id = item.ID }, new { @class = "btn btn-info btn-sm" })
        </div>
    </div>
}
<hr />

<p>
    @Html.ActionLink("Рэдагаваць", "Edit", new { id = Model.ID }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("Да лiсты", "Index", new { area = "" }, new { @class = "btn btn-outline-dark" })
</p> 